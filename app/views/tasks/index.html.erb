<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <div>
        <div>
          <%= link_to task.user.name, user_path(task.user) %>　<%= link_to task.id, task %>  　<span class="text-muted">登録日 <%= task.created_at %></span>
        </div>
        <div>
          <p><%= task.status %> &gt; <%= task.content %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to 'edit', task, method: :get %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @tasks %>
</ul>

<%= link_to "新規タスクの登録", new_task_path %>